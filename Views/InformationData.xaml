<Window x:Class="Homework11_WPF.Views.InformationData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework11_WPF.Views"
        mc:Ignorable="d"
        Title="Сведения" Height="400" Width="650" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView x:Name="listLoadedData">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="130" DisplayMemberBinding="{Binding Path=DateTimeChanged}">Дата и время</GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=WhoChanged}">Кто изменил</GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=TypeOfChange}">Тип изменений</GridViewColumn>
                    <GridViewColumn Width="250" DisplayMemberBinding="{Binding Path=WhatChanged}">Что изменили</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
